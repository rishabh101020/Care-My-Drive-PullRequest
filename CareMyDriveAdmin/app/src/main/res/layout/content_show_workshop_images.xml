<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/showWorkshopImages_CV1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/green_100"
            android:layout_marginBottom="4dp"
            >


            <ImageView
                android:id="@+id/showWorkshopImages_IV1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <ProgressBar
                android:id="@+id/showWorkshopImages_PB1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/showWorkshopImages_CV2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/green_100"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            >


            <ImageView
                android:id="@+id/showWorkshopImages_IV2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <ProgressBar
                android:id="@+id/showWorkshopImages_PB2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/showWorkshopImages_CV3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/green_100"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            >


            <ImageView
                android:id="@+id/showWorkshopImages_IV3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <ProgressBar
                android:id="@+id/showWorkshopImages_PB3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/showWorkshopImages_CV4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/green_100"
            android:layout_marginTop="4dp"
            >


            <ImageView
                android:id="@+id/showWorkshopImages_IV4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <ProgressBar
                android:id="@+id/showWorkshopImages_PB4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>