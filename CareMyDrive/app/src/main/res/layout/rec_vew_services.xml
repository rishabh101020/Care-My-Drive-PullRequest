<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    android:elevation="10dp"
    app:cardBackgroundColor="@color/green_100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="10dp">

        <RelativeLayout
            android:id="@+id/RV_Services_RV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/RV_Services_CV"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentLeft="true"

                >

                <ImageView
                    android:id="@+id/RV_Services_IV"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_cars_repair_70_green" />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/RV_Services_RV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/RV_Services_CV"
                android:layout_toLeftOf="@id/RV_Services_RV2">

                <TextView
                    android:id="@+id/RV_Services_ServiceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Name"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/RV_Services_Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/RV_Services_ServiceName"
                    android:text="City, State" />


                <TextView
                    android:id="@+id/RV_Services_WorkshopNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/RV_Services_Address"
                    android:text="9876543210" />



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RV_Services_RV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/RV_Services_Rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_star_full_12_orange"
                    android:text="X" />

            </RelativeLayout>

        </RelativeLayout>


        <View
            android:id="@+id/RV_Services_V"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@id/RV_Services_RV"
            android:layout_margin="8dp"
            android:background="#79D6D1D1" />

        <LinearLayout
            android:id="@+id/RV_Services_LV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RV_Services_V"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/RV_Services_VewDet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_rupee_16sp"
                android:text="XXXX.X "
                android:textColor="@color/black"
                android:textSize="18sp" />


            <Button
                android:id="@+id/RV_Services_Service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:text="Book"/>

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>