<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RV_cars_CV1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="10dp"
    app:cardBackgroundColor="@color/green_100"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/RV_cars_RL4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="10dp"
        android:visibility="gone">


        <ImageView
            android:id="@+id/RV_cars_IV2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="center"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_add_70_green" />

        <TextView
            android:id="@+id/RV_cars_AddCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RV_cars_IV2"
            android:text="Add Vehicle"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RV_cars_RL5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="10dp">

        <RelativeLayout
            android:id="@+id/RV_cars_RV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/RV_cars_CV"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentLeft="true"

                >

                <ImageView
                    android:id="@+id/RV_cars_IV"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_cars_70_green" />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/RV_cars_RV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_toEndOf="@id/RV_cars_CV">

                <TextView
                    android:id="@+id/RV_cars_CarName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Car Name"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/RV_cars_CarNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/RV_cars_CarName"
                    android:text="XX 00 XX 0000" />

                <TextView
                    android:id="@+id/RV_cars_Model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/RV_cars_CarNo"
                    android:text="Model, Manufacturer" />

            </RelativeLayout>

        </RelativeLayout>


        <View
            android:id="@+id/RV_cars_V"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@id/RV_cars_RV"
            android:layout_margin="8dp"
            android:background="#79D6D1D1" />

        <LinearLayout
            android:id="@+id/RV_cars_LV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RV_cars_V"
            android:orientation="horizontal">


            <Button
                android:id="@+id/RV_cars_VewDet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:text="Bookings"
                android:visibility="invisible"/>


            <Button
                android:id="@+id/RV_cars_Service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:text="Edit" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>